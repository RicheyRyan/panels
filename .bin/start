#!/usr/bin/env bash

BIN=node_modules/.bin

# once off, we don't need to be always looking at the external deps
$BIN/browserify --verbose \
  --require can-use-dom \
  --require lite-url \
  --require lodash.debounce \
  --require panels-ui \
  --require raf \
  --require react \
  --require react-dom \
  --require react-redux \
  --require redux \
  --require redux-logger \
  --require redux-thunk \
  --require rlookup \
  --outfile playground/vendor.js vendor.es6

$BIN/watchify --debug --verbose \
  --no-bundle-external \
  --extension .es6 \
  --transform babelify \
  --outfile playground/panels.js \
  index.es6 &
sudo $BIN/babel-node .bin/server.es6 &
wait
