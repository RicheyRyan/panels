#!/usr/bin/env bash

BIN=node_modules/.bin

NODE_ENV=development $BIN/watchify --debug --verbose \
  --external array-find-index \
  --external browser-vendor-prefix \
  --external can-use-dom \
  --external houkou \
  --external lite-url \
  --external lodash.debounce \
  --external panels-normalise-uri \
  --external panels-ui \
  --external react \
  --external react-dom \
  --external react-redux \
  --external redux \
  --external redux-logger \
  --external redux-promise \
  --external redux-thunk \
  --external style-to-css \
  --external waiting \
  --transform [rollupify --config rollup.config.js] \
  --transform loose-envify \
  --require ./playground/panels.dev.app.js:panels.dev \
  --outfile playground/panels.dev.js & \
NODE_ENV=development $BIN/watchify --debug --verbose \
  --require array-find-index \
  --require browser-vendor-prefix \
  --require can-use-dom \
  --require houkou \
  --require lite-url \
  --require lodash.debounce \
  --require panels-normalise-uri \
  --require panels-ui \
  --require react \
  --require react-dom \
  --require react-redux \
  --require redux \
  --require redux-logger \
  --require redux-promise:./utils/redux-promise \
  --require redux-thunk \
  --require style-to-css \
  --require waiting \
  --transform [rollupify --config rollup.config.js] \
  --transform loose-envify \
  --outfile playground/panels.js index.dev.js & \
  sudo $BIN/babel-node --presets es2015 ./.bin/server.js & \
  wait
