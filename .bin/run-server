#!/usr/bin/env bash

APPS=''
for APP in $@; do
  APPS="node_modules/${APP},${APPS}"
done

WATCH=''
for APP in $@; do
  WATCH="--watch node_modules/${APP} ${WATCH}"
done

sudo \
  APPS=$APPS \
  NODE_ENV=dev \
  LISTEN=80 \
  nodemon --ext js,es6 \
  --watch . \
  $WATCH \
  --exec node_modules/.bin/babel-node -- .bin/server.es6
